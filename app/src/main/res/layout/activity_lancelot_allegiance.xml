                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/allegiance_front_1"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:src="@drawable/switchallegiance"
                    android:layout_margin="10dp"/>

